{
    // Editor preferences.
    "editor.fontFamily": "Fira Code",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "editor.renameOnType": true,
    "editor.fontSize": 14,
    "window.zoomLevel": 0,

    // Workbench preferences
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Dracula Soft",
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "vscode-icons",

    // Plugins settings.
    "files.trimTrailingWhitespace": true,
    "todo-tree.tree.showScanModeButton": false,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        // "**/*.g.dart": true
    },

    // Specific settings for Git.
    "git.confirmSync": false,

    // Specific settings for JavaScript.
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,

    // Specific settings for TypeScript.
    "typescript.suggest.autoImports": true,

    // Specifc settings for Dart.
    "dart.flutterAndroidX": true,
    "dart.flutterSdkPath": "/home/gmartins/fvm/versions/stable",

    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
    },

    "gitlab-notifications.privateToken": "WM5EJfUYsen4Yt-Q9eED",
    "gitlab-notifications.hideIfNone": true,
    "gitlab-notifications.refreshInterval": 120, // seconds
    "gitlab-notifications.showNumberOfNotifications": true, // true/false
    "gitlab-notifications.color": "orange",
}